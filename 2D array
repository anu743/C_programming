#include<stdio.h>
#include<stdlib.h>

#define ROW 3
#define COL 3

int main()
{
  int i,j,k=0;
  int **arr;
  
  arr = (int **)malloc(ROW*sizeof(int *));
  
  for(i=0;i<ROW;i++)
  {
    *(a+i) = (int *)malloc(COL*sizeof(int));
   }
   
